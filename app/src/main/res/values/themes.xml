<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ZarGroup" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryColorVariant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/splashGradiantStartColor</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@color/splashGradiantStartColor</item>

        <item name="fontFamily">@font/kalameh_regular</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

    </style>


    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/kalameh_regular</item>
    </style>

    <style name="checkBoxStyle" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/primaryColor</item>
        <item name="android:textColorSecondary">@color/textViewFooter</item>
    </style>

    <style name="switchStyle" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/profileIconColor</item>
        <item name="android:colorForeground">@color/textViewFooter</item>
    </style>


</resources>