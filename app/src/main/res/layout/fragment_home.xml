<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/drawable_home_gradiant"
            android:clipChildren="false"
            android:clipToPadding="false">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayoutProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:background="@drawable/drawable_home_profile"
                android:padding="@dimen/_4sdp"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewProfile"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    app:cardCornerRadius="@dimen/_30sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/profileDescription" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/textViewProfileName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:fontFamily="@font/kalameh_regular"
                    android:text="مهرداد لطیفی"
                    android:textColor="@color/textViewColor2"
                    android:textSize="@dimen/_10sdp"
                    app:layout_constraintBottom_toTopOf="@id/textViewProfileCode"
                    app:layout_constraintEnd_toStartOf="@id/cardViewProfile"
                    app:layout_constraintTop_toTopOf="@id/cardViewProfile" />

                <TextView
                    android:id="@+id/textViewProfileCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:fontFamily="@font/kalameh_light"
                    android:text="کد پرسنلی : 5000602"
                    android:textColor="@color/textViewColor2"
                    android:textSize="@dimen/_10sdp"
                    app:layout_constraintBottom_toBottomOf="@id/cardViewProfile"
                    app:layout_constraintEnd_toStartOf="@id/cardViewProfile"
                    app:layout_constraintTop_toBottomOf="@id/textViewProfileName" />

                <ImageView
                    android:id="@+id/imageViewNotification"
                    android:layout_width="@dimen/_26sdp"
                    android:layout_height="@dimen/_33sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:contentDescription="@string/profileDescription"
                    android:src="@drawable/notification"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />


                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    app:cardBackgroundColor="@color/cardViewHomeNotificationColor"
                    app:cardCornerRadius="@dimen/_20sdp"
                    app:layout_constraintBottom_toTopOf="@id/imageViewNotification"
                    app:layout_constraintStart_toStartOf="@id/imageViewNotification"
                    app:layout_constraintTop_toTopOf="@id/imageViewNotification">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/kalameh_regular"
                        android:gravity="center"
                        android:text="02"
                        android:textColor="@color/textViewColor1"
                        android:textSize="@dimen/_10sdp" />

                </androidx.cardview.widget.CardView>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/textViewHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/kalameh_regular"
                android:text="@string/home"
                android:textColor="@color/textViewColor2"
                android:textSize="@dimen/_11sdp"
                app:layout_constraintEnd_toEndOf="@id/constraintLayoutProfile"
                app:layout_constraintTop_toBottomOf="@id/constraintLayoutProfile" />

            <net.orandja.shadowlayout.ShadowLayout
                android:id="@+id/shadowLayoutSlider"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_10sdp"
                app:layout_constraintDimensionRatio="H,16:9"
                app:layout_constraintTop_toBottomOf="@id/textViewHome"
                app:shadow_cast_only_background="false"
                app:shadow_color="#E6A2BFDF"
                app:shadow_downscale="0.4"
                app:shadow_radius="30"
                app:shadow_with_color="false"
                app:shadow_with_css_scale="true"
                app:shadow_with_dpi_scale="true">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="@dimen/_15sdp">

                    <com.zarholding.zar.view.autoimageslider.SliderView
                        android:id="@+id/sliderViewBanner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:sliderAnimationDuration="600"
                        app:sliderAutoCycleDirection="back_and_forth"
                        app:sliderAutoCycleEnabled="false"
                        app:sliderIndicatorAnimationDuration="600"
                        app:sliderIndicatorGravity="center_horizontal|bottom"
                        app:sliderIndicatorMargin="@dimen/_5sdp"
                        app:sliderIndicatorOrientation="horizontal"
                        app:sliderIndicatorPadding="4dp"
                        app:sliderIndicatorRadius="2dp"
                        app:sliderIndicatorSelectedColor="@color/bannerSliderIndicator"
                        app:sliderIndicatorUnselectedColor="#222020" />

                </androidx.cardview.widget.CardView>

            </net.orandja.shadowlayout.ShadowLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewApps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_15sdp"
                app:layout_constraintTop_toBottomOf="@id/shadowLayoutSlider"
                tools:itemCount="2" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewNews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_15sdp"
                app:layout_constraintTop_toBottomOf="@id/recyclerViewApps"
                tools:itemCount="2" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewRequest"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                app:layout_constraintDimensionRatio="H,16:7"
                app:layout_constraintTop_toBottomOf="@id/recyclerViewNews"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:itemCount="2" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</layout>
