<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="item"
            type="com.zarholding.zar.database.entity.UserInfoEntity" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutParent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/drawable_home_gradiant">

        <TextView
            android:id="@+id/textViewService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:fontFamily="@font/kalameh_regular"
            android:text="@string/qrCode"
            android:textColor="@color/textViewColor2"
            android:textSize="@dimen/_11sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:src="@drawable/ic_qr_code"
            android:contentDescription="@string/logoDescription"/>

        <LinearLayout
            android:id="@+id/linearLayoutContent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/drawable_home_profile"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginVertical="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@id/textViewService"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="@dimen/_10sdp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardBackgroundColor="@color/primaryColor">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_10sdp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardViewProfile"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_constraintWidth_percent="0.5"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintDimensionRatio="H,1:1"
                            app:cardCornerRadius="@dimen/_10sdp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:contentDescription="@string/iconDescription" />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/textviewName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/cardViewProfile"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:layout_marginHorizontal="@dimen/_5sdp"
                            android:textSize="@dimen/_11sdp"
                            android:lines="1"
                            android:textColor="@color/textViewColor2"
                            android:fontFamily="@font/kalameh_regular"
                            app:setTitleText="@{@string/fullName}"
                            app:setValueText="@{item != null ? item.fullName : @string/empty}"/>


                        <TextView
                            android:id="@+id/textviewCode"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/textviewName"
                            app:layout_constraintStart_toStartOf="@id/textviewName"
                            app:layout_constraintEnd_toEndOf="@id/textviewName"
                            android:lines="1"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:textSize="@dimen/_11sdp"
                            android:textColor="@color/textViewColor2"
                            android:fontFamily="@font/kalameh_regular"
                            app:setTitleText="@{@string/personnelNumber}"
                            app:setValueText="@{item != null ? item.personnelNumber : @string/empty}"/>

                        <TextView
                            android:id="@+id/textviewJob"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/textviewCode"
                            android:layout_marginTop="@dimen/_10sdp"
                            app:layout_constraintStart_toStartOf="@id/textviewName"
                            app:layout_constraintEnd_toEndOf="@id/textviewName"
                            android:lines="1"
                            android:textSize="@dimen/_11sdp"
                            android:textColor="@color/textViewColor2"
                            android:fontFamily="@font/kalameh_regular"
                            app:setTitleText="@{@string/jobTitle}"
                            app:setValueText="@{item != null ? item.personnelJobKeyText : @string/empty}"/>

                        <TextView
                            android:id="@+id/textviewUnit"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/textviewJob"
                            android:layout_marginTop="@dimen/_10sdp"
                            app:layout_constraintStart_toStartOf="@id/textviewName"
                            app:layout_constraintEnd_toEndOf="@id/textviewName"
                            android:lines="1"
                            android:textSize="@dimen/_11sdp"
                            android:textColor="@color/textViewColor2"
                            android:fontFamily="@font/kalameh_regular"
                            app:setTitleText="@{@string/organizationUnit}"
                            app:setValueText="@{item != null ? item.organizationUnit : @string/empty}"/>

                        <TextView
                            android:id="@+id/textviewPhone"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/textviewUnit"
                            android:layout_marginTop="@dimen/_10sdp"
                            app:layout_constraintStart_toStartOf="@id/textviewName"
                            app:layout_constraintEnd_toEndOf="@id/textviewName"
                            android:lines="1"
                            android:textSize="@dimen/_11sdp"
                            android:textColor="@color/textViewColor2"
                            android:fontFamily="@font/kalameh_regular"
                            app:setTitleText="@{@string/organizationPhone}"
                            app:setValueText="@{item != null ? item.phone : @string/empty}"/>

                        <TextView
                            android:id="@+id/textviewMobile"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/textviewPhone"
                            android:layout_marginTop="@dimen/_10sdp"
                            app:layout_constraintStart_toStartOf="@id/textviewName"
                            app:layout_constraintEnd_toEndOf="@id/textviewName"
                            android:lines="1"
                            android:textSize="@dimen/_11sdp"
                            android:textColor="@color/textViewColor2"
                            android:fontFamily="@font/kalameh_regular"
                            app:setTitleText="@{@string/mobile}"
                            app:setValueText="@{item != null ? item.mobile : @string/empty}"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </ScrollView>

            </androidx.cardview.widget.CardView>

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
