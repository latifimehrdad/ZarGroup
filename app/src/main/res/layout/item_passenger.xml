<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="item"
            type="com.zarholding.zar.model.other.AppModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/materialButtonTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/linearLayoutAdd"
            app:icon="@drawable/ic_date"
            app:iconGravity="end"
            android:lines="1"
            android:ellipsize="end"
            android:fontFamily="@font/kalameh_semibold"
            android:textColor="@color/textViewColor1"
            android:textSize="@dimen/_10sdp"
            app:cornerRadius="@dimen/_5sdp"
            android:text="@{item.title}"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/linearLayoutAdd"
            android:layout_width="0dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center_vertical"
            android:layout_marginStart="@dimen/_5sdp"
            app:layout_constraintStart_toEndOf="@id/materialButtonTitle">

            <com.skydoves.powerspinner.PowerSpinnerView
                android:id="@+id/powerSpinnerPassenger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/drawable_spinner"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/cardViewAdd"
                android:fontFamily="@font/kalameh_light"
                android:gravity="center"
                android:hint="@string/chooseFromList"
                android:padding="@dimen/_3sdp"
                android:textColor="@color/textViewColor1"
                android:textColorHint="@color/textViewFooter"
                android:textSize="@dimen/_9sdp"
                app:spinner_arrow_gravity="end"
                app:spinner_arrow_padding="8dp"
                app:spinner_arrow_tint="@color/primaryColor"
                app:spinner_divider_color="@color/primaryColorVariant"
                app:spinner_divider_show="true"
                app:spinner_divider_size="0.4dp"
                app:spinner_item_height="46dp"
                app:spinner_popup_animation="bounce"
                app:spinner_popup_background="@drawable/drawable_spinner_select"
                app:spinner_popup_elevation="14dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewAdd"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/powerSpinnerPassenger"
                app:layout_constraintDimensionRatio="H,1:1"
                app:cardBackgroundColor="@color/primaryColor"
                app:cardCornerRadius="@dimen/_100sdp"
                android:layout_marginStart="@dimen/_2sdp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/ic_edit"/>

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
