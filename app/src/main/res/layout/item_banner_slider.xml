<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="item"
            type="com.zarholding.zar.model.response.banner.BannerModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageViewSlider"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:contentDescription="@string/sliderDescription"
            app:loadImage1="@{item.bannerImage}"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonShow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="@dimen/_10sdp"
            android:textSize="@dimen/_10sdp"
            android:fontFamily="@font/kalameh_regular"
            app:cornerRadius="@dimen/_5sdp"
            android:textColor="@color/white"
            android:text="@string/view" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>

